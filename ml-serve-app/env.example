# Environment Configuration
ENV=local

# Database Configuration
# MySQL connection details for darwin-ml-serve database
MYSQL_HOST=localhost
MYSQL_SLAVE_HOST=localhost
MYSQL_DATABASE=darwin_ml_serve
MYSQL_USERNAME=root
MYSQL_PASSWORD=password

# OpenTelemetry Configuration
# ENABLE_OTEL controls whether telemetry is enabled
# If not set, defaults to disabled for ENV=local, enabled for all other environments
# ENABLE_OTEL=false
# OTEL_SERVICE_NAME=darwin-ml-serve
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Service URLs
DCM_URL=http://localhost:8081
ARTIFACT_BUILDER_URL=http://localhost:8080
ARTIFACT_BUILDER_PUBLIC_URL=http://localhost/artifact-builder

# GitHub Configuration
# Required for accessing private repositories during artifact builds
GITHUB_TOKEN=

# Kubernetes Configuration
KUBE_INGRESS_CLASS=alb

# Service Discovery (optional)
ENABLE_ISTIO=false
ISTIO_SERVICE_NAME=istio-ingressgateway
ISTIO_NAMESPACE=istio-system

# ALB Logging Configuration (Optional)
ALB_LOGS_ENABLED=false
ALB_LOGS_BUCKET=
ALB_LOGS_PREFIX=alb-logs

# Container Registry
# CONTAINER_REGISTRY: Your container registry (e.g., docker.io, gcr.io, yourregistry.com)
# IMAGE_REPOSITORY: Your image repository name (used for artifact builds)
# IMAGE_TAG: Default tag for images (used with IMAGE_REPOSITORY)
# DEFAULT_RUNTIME: Complete runtime image for one-click model deployments
CONTAINER_REGISTRY=docker.io
IMAGE_REPOSITORY=darwin
IMAGE_TAG=latest
DEFAULT_RUNTIME=docker.io/python:3.9-slim

# MLflow Configuration (for one-click model deployment)
# These environment variables will be automatically passed to deployed models
MLFLOW_TRACKING_URI=
MLFLOW_TRACKING_USERNAME=
MLFLOW_TRACKING_PASSWORD=

# Serve Configuration
# Note: HEALTHCHECK_PATH and APPLICATION_PORT are for the deployed containers (FastAPI apps)
HEALTHCHECK_PATH=/healthcheck
APPLICATION_PORT=8000

# Resource Names
FASTAPI_SERVE_RESOURCE_NAME=darwin-fastapi-serve
FASTAPI_VALUES_TEMPLATE_NAME=fastapi_values.yaml
RAY_SERVE_RESOURCE_NAME=RayService
RAY_VALUES_TEMPLATE_NAME=ray_values.yaml

# Chart Versions
FASTAPI_SERVE_CHART_VERSION=1.0.0
RAY_SERVE_CHART_VERSION=1.0.0

# Organization Configuration
ORGANIZATION_NAME=my-org

# Workflow Serve Configuration (Only needed if using workflow serves)
JOB_CLUSTER_RUNTIME=
