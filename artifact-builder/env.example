ENV=local
DEV=true

# OpenTelemetry Configuration
# ENABLE_OTEL controls whether telemetry is enabled
# If not set, defaults to disabled for ENV=local, enabled for all other environments
# ENABLE_OTEL=false
# OTEL_SERVICE_NAME=artifact-builder
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# --- Directory for build artifacts (app build dirs etc.) ---
BUILD_ARTIFACTS_ROOT=build_artifacts

# --- Log file roots ---
LOG_FILE_ROOT_LOCAL=logs
LOG_FILE_ROOT_PROD=/var/www/artifact-builder/logs

MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=mlp_serve
MYSQL_USERNAME=root
MYSQL_PASSWORD=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

S3_BUCKET=

# Service URLs (Local Development)
APP_LAYER_URL=http://localhost:8000

CONTAINER_IMAGE_PREFIX=darwin
CONTAINER_IMAGE_PREFIX_GCP=ray-images
IMAGE_REPOSITORY=serve-app
AWS_ECR_ACCOUNT_ID=
AWS_ECR_REGION=us-east-1
GCP_PROJECT_ID=
GCP_CREDS_PATH=/home/admin/gcp_creds.json

# Local Registry Configuration (for Kubernetes local development)
LOCAL_REGISTRY=localhost:55000

# GitHub Token (optional) - For private repository access
GITHUB_TOKEN=